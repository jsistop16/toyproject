<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/loadingLogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/loading_logo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/loadingTxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadingLayout"
        app:layout_constraintTop_toBottomOf="@+id/loadingTxt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/loadingImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/meta"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="@+id/loadingLayout"
            app:layout_constraintTop_toTopOf="@+id/loadingLayout"
            app:layout_constraintBottom_toBottomOf="@+id/loadingLayout"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/loadingTxt2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Meta"
            android:textSize="17dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/loadingImage"
            app:layout_constraintTop_toTopOf="@+id/loadingLayout"
            app:layout_constraintBottom_toBottomOf="@+id/loadingLayout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>